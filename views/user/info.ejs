    <link rel="icon" href="animated_favicon.gif" type="image/gif"/>
    <link href="/css/member.css" rel="stylesheet" type="text/css" media="screen"/>
    <link href="/css/style.css" rel="stylesheet" type="text/css"/>
</head>

<body>
<% include ../header %>

<div class="content">
    <div class="menu">当前位置: <span><a href="">首页</a> <code>&gt;</code> 用户中心</span></div>
    <div class="user">
        <div class="usernav">
            <dl>
                <dt><span>　</span>帐户管理</dt>
                <dd>
                    <a href="/user/orderlist">我的订单</a>
                </dd>
                <dd>
                    <a href="/user/liuyan">我的留言</a>
                </dd>
                <dd>
                    <a href="/user/favor">我的收藏</a>
                </dd>
            </dl>
            <dl>
                <dt><span>　</span>个人信息管理</dt>
                <dd class="ddor">
                    <a href="/user/info">用户信息</a>
                </dd>
                <dd>
                    <a href="/user/repwd">修改密码</a>
                </dd>
                <dd>
                    <a href="/user/address">收货地址</a>
                </dd>
            </dl>
        </div>
        <div class="usermain">

            <div class="userright">
                    <div class="mainbt">用户信息</div>
                    <div class="logregmain">
                        <div class="logregline">
                            <div class="logreg_l">收货地址：</div>
                            <div class="logreg_r">
                                <% if(user.address){ %>
                                    <%=user.address%>
                                <% }else{ %>
                                    <span style="color:red;">未填写（<a href="/user/address">立即填写</a>）</span>
                                <% } %>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="logregline">
                            <div class="logreg_l">用户名：</div>
                            <div class="logreg_r"><%=user.userName%></div>
                            <div class="clear"></div>
                        </div>
                        <div class="logregline">
                            <div class="logreg_l">电话：</div>
                            <div class="logreg_r"><%=user.phone%></div>
                            <div class="clear"></div>
                        </div>
                        <div class="logregline">
                            <div class="logreg_l">邮箱：</div>
                            <div class="logreg_r"><%=user.email%></div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="clear"></div>
            </div>

        </div>
        <div class="clear"></div>
    </div>
</div>

<% include ../footer.html %>
</body>
</html>